<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.beata_macbook.opentricity">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name="android.support.multidex.MultiDexApplication"
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".UI.UI.MainScreenActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".UI.UI.AboutScreenActivity" />
        <activity android:name=".UI.UI.CategoriesScreenActivity" />
        <activity android:name=".UI.UI.PlacesListActivity" />
        <activity android:name=".UI.UI.PlaceDetailActivity" />
        <activity android:name=".UI.UI.Instruction" />
        <activity android:name=".UI.UI.AddUserActivity" />
        <activity android:name=".UI.UI.ListCategoriesScreenActivity" />
        <!--
 ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity android:name=".UI.UI.AddPlace" />
        <activity android:name=".UI.UI.Pop"></activity>
    </application>

</manifest>