<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.beata_macbook.opentricity.UI.UI.MainScreenActivity"
    android:background="#6A5ACD"
    >

    <Button
        android:layout_width="match_parent"
        android:layout_height="30pt"
        android:text="O aplikacji"
        android:id="@+id/aboutButton"
        android:layout_below="@+id/instructionsButton"
        android:layout_alignLeft="@+id/instructionsButton"
        android:textColor="#5900ff"
        android:textSize="20dp"
        android:layout_alignStart="@+id/instructionsButton"
        android:onClick="onAboutButtonClick" />

    <TextView
        android:layout_width="100pt"
        android:layout_height="30pt"
        android:gravity="center"
        android:text="OpenTricity"
        android:textSize="40dp"
        android:id="@+id/titleTextView"
        android:textColor="#ffffff"
        android:layout_above="@+id/loginButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="30pt"
        android:text="Zaloguj"
        android:id="@+id/loginButton"
        android:textColor="#5900ff"
        android:textSize="20dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onLoginButtonClick" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="30pt"
        android:text="Wejdź jako gość"
        android:id="@+id/guestButton"
        android:textColor="#5900ff"
        android:textSize="20dp"
        android:layout_below="@+id/loginButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onGuestButtonClick" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="30pt"
        android:text="Instrukcja"
        android:id="@+id/instructionsButton"
        android:textColor="#5900ff"
        android:textSize="20dp"
        android:layout_below="@+id/guestButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onInstructionsButtonClick" />

</RelativeLayout>
