<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.beata_macbook.opentricity.UI.UI.MainScreenActivity"
    android:background="#2196F3"
    >

    <TextView
        android:layout_width="160pt"
        android:layout_height="40pt"
        android:gravity="center"
        android:text="OpenTricity"
        android:textSize="40dp"
        android:id="@+id/titleTextView"
        android:textColor="#ffffff"
        android:layout_marginBottom="47dp"
        android:layout_above="@+id/loginButton"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="O aplikacji"
        android:id="@+id/aboutButton"
        android:textColor="#1976D2"
        android:background="#BBDEFB"
        android:textSize="20dp"
        android:onClick="onAboutButtonClick"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wejdź jako gość"
        android:id="@+id/guestButton"
        android:textColor="#1976D2"
        android:background="#BBDEFB"
        android:textSize="20dp"
        android:onClick="onGuestButtonClick"
        android:layout_above="@+id/instructionsButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="32dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Zaloguj"
        android:id="@+id/loginButton"
        android:textColor="#1976D2"
        android:background="#BBDEFB"
        android:textSize="20dp"
        android:onClick="onLoginButtonClick"
        android:layout_above="@+id/guestButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="32dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Instrukcja"
        android:id="@+id/instructionsButton"
        android:textColor="#1976D2"
        android:background="#BBDEFB"
        android:shadowColor="#757575"
        android:textSize="20dp"
        android:onClick="onInstructionsButtonClick"
        android:layout_marginBottom="24dp"
        android:layout_above="@+id/aboutButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
