<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.beata_macbook.opentricity.UI.UI.MainScreenActivity"
    android:background="@drawable/staremiasto"
    >


    <Button
        android:layout_width="match_parent"
        android:layout_height="20pt"
        android:text="O aplikacji"
        android:id="@+id/aboutButton"
        android:background="#FF6347"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:onClick="onAboutButtonClick"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="20pt"
        android:text="Instrukcja"
        android:id="@+id/instructionsButton"
        android:background="#FF6347"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:onClick="onInstructionsButtonClick"
        android:layout_above="@+id/aboutButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="23dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="20pt"
        android:text="ZnajdÅº miejsce"
        android:id="@+id/guestButton"
        android:background="#FF6347"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:onClick="onGuestButtonClick"
        android:layout_above="@+id/instructionsButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="21dp" />

</RelativeLayout>
